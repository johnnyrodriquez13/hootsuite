<script type="text/javascript">
jQuery( function ( $ ) {
  // Toggle mobile menu
  $('#navbarToggle').on('click', function() {
    var primaryNavigation = $('#navPrimary');
    $this = $(this);

    // Dropdown toggle setup
    if (primaryNavigation.hasClass('is-expanded')) {
      primaryNavigation.removeClass('is-expanded');
      $('body').removeClass('no-scroll');
      $this.addClass('collapsed');
      $this.attr('aria-expanded', 'false');

    } else {
      primaryNavigation.addClass('is-expanded');
      $('body').addClass('no-scroll');
      $this.removeClass('collapsed');
      $this.attr('aria-expanded', 'true');
    }
  });


  // Toggle filter menu
  $('#filterToggle').on('click', function() {
    var filterMenu = $('#navFilter');
    $this = $(this);

    // Dropdown toggle setup
    if (filterMenu.hasClass('is-expanded')) {
      filterMenu.removeClass('is-expanded');
      $this.addClass('collapsed');
      $this.attr('aria-expanded', 'false');

    } else {
      filterMenu.addClass('is-expanded');
      $this.removeClass('collapsed');
      $this.attr('aria-expanded', 'true');
    }
  });


  // Toggle global dropdowns
  if ($(window).width() >= 1200) {
    $('.dropdown-toggle').on('mouseover focus', function() {
      $this = $(this);

      $('.dropdown .dropdown-toggle')
        .removeClass('show')
        .attr('aria-expanded', 'false');
      $('.dropdown .dropdown-menu')
        .removeClass('show')

      $this
        .addClass('show')
        .attr('aria-expanded', 'true')
        .closest('.dropdown')
        .find('.dropdown-menu')
        .addClass('show')
    });
    $('.dropdown').on('mouseleave', function() {
      $('.dropdown .dropdown-toggle')
        .removeClass('show')
        .attr('aria-expanded', 'false');
      $('.dropdown .dropdown-menu')
        .removeClass('show')
    });
  } else {
    $('.dropdown-toggle').on('click', function() {
        $this = $(this);

        $('.dropdown .dropdown-toggle')
          .removeClass('show')
          .attr('aria-expanded', 'false');
        $('.dropdown .dropdown-menu')
          .removeClass('show')

        $this
          .addClass('show')
          .attr('aria-expanded', 'true')
          .closest('.dropdown')
          .find('.dropdown-menu')
          .addClass('show')
    });
    $('.dropdown').on('mouseleave', function() {
      $('.dropdown .dropdown-toggle')
        .removeClass('show')
        .attr('aria-expanded', 'false');
      $('.dropdown .dropdown-menu')
        .removeClass('show')
    });
  }


  // dropdown back button
  $('.dropdown-heading-mobile').on('click', function() {
    $('.dropdown-toggle').removeClass('show');
    $('.dropdown-menu').removeClass('show');
  });


  // Toggle mobile menu
  $('#toggleOptions').on('click', function() {
    var blogCategories = $('#blogCategories');
    $this = $(this);

    // Dropdown toggle setup
    if (blogCategories.hasClass('is-expanded')) {
      blogCategories.removeClass('is-expanded');
      $this.addClass('collapsed');
      $this.attr('aria-expanded', 'false');

    } else {
      blogCategories.addClass('is-expanded');
      $this.removeClass('collapsed');
      $this.attr('aria-expanded', 'true');
    }
  });
});

</script>
